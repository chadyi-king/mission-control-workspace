{
  "agentId": "helios",
  "agentName": "Helios",
  "role": "mission_control_engineer",
  "version": "2.0.0",
  "createdAt": "2026-02-13T10:20:00+08:00",
  "lastAudit": "2026-02-13T11:51:00+08:00",
  "mode": "autonomous",
  "description": "Coordinates all agents, compiles reports, verifies dashboard, alerts CHAD_YI",
  
  "coordination_schedule": {
    "intervalMinutes": 15,
    "cycle": {
      "00": "ping_all_agents",
      "02": "collect_responses",
      "05": "verify_dashboard",
      "07": "compile_report",
      "10": "send_to_chad_yi"
    }
  },
  
  "agents_to_monitor": [
    {
      "id": "chad_yi",
      "name": "CHAD_YI",
      "role": "Orchestrator",
      "ping_method": "sessions_send",
      "response_expected": true,
      "files_to_check": ["current-task.md", "MEMORY.md"]
    },
    {
      "id": "escritor",
      "name": "Escritor",
      "role": "Story Agent",
      "ping_method": "sessions_send",
      "response_expected": true,
      "files_to_check": ["current-task.md", "MEMORY.md", "outbox/drafts/"]
    },
    {
      "id": "quanta",
      "name": "Quanta",
      "role": "Trading Dev",
      "ping_method": "sessions_send",
      "response_expected": true,
      "files_to_check": ["current-task.md", "MEMORY.md", "signals/PENDING/", "logs/"],
      "special_alerts": ["new_signal", "trade_executed", "position_closed"]
    },
    {
      "id": "mensamusa",
      "name": "MensaMusa",
      "role": "Options Trading",
      "ping_method": "sessions_send",
      "response_expected": false,
      "files_to_check": ["current-task.md"],
      "status": "not_spawned",
      "blocker": "Moomoo credentials"
    },
    {
      "id": "autour",
      "name": "Autour",
      "role": "Content Creator",
      "ping_method": "sessions_send",
      "response_expected": false,
      "files_to_check": ["current-task.md"],
      "status": "not_spawned"
    }
  ],
  
  "communication_protocol": {
    "ping_message": "Helios ping [TIMESTAMP]. Please respond with: 1) Current task, 2) Status, 3) Progress, 4) Blockers, 5) Next milestone ETA",
    "response_format": "/agents/message-bus/AGENT_RESPONSE_TEMPLATE.md",
    "report_recipient": "chad_yi",
    "report_method": "sessions_send",
    "urgent_escalation": "chad_yi_decides"
  },
  
  "dashboard_verification": {
    "data_json_path": "/home/chad-yi/.openclaw/workspace/mission-control-dashboard/data.json",
    "checks": [
      "agent_status_matches_reality",
      "task_counts_accurate",
      "deadlines_current",
      "workflow_arrays_correct"
    ],
    "discrepancy_action": "report_to_chad_yi_with_fix_instructions"
  },
  
  "event_triggers": {
    "immediate_alert": [
      "critical_deadline_today",
      "large_trading_loss",
      "system_failure",
      "security_issue"
    ],
    "new_signal": {
      "source": "quanta",
      "action": "include_in_next_report",
      "priority": "high"
    }
  },
  
  "daily_digest": {
    "enabled": true,
    "time": "20:00",
    "timezone": "Asia/Singapore",
    "includes": [
      "tasks_completed_today",
      "tasks_in_progress",
      "blockers",
      "trading_summary",
      "tomorrow_priorities",
      "dashboard_health"
    ]
  },
  
  "files_and_directories": {
    "state_file": "/agents/helios/AGENT_STATE.json",
    "outbox": "/agents/helios/outbox/",
    "inbox": "/agents/message-bus/inbox/helios/",
    "report_template": "/agents/message-bus/AGENT_RESPONSE_TEMPLATE.md",
    "infrastructure_doc": "/AGENT_INFRASTRUCTURE.md"
  }
}
