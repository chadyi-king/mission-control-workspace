{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "event_schema_v1",
  "type": "object",
  "required": [
    "agent",
    "ts",
    "event_type",
    "payload",
    "status",
    "idempotency_key",
    "model_tier",
    "model_id",
    "reasoning_summary",
    "confidence"
  ],
  "properties": {
    "agent": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "event_type": {
      "type": "string"
    },
    "payload": {
      "type": "object"
    },
    "status": {
      "type": "string",
      "enum": [
        "success",
        "failure",
        "partial"
      ]
    },
    "idempotency_key": {
      "type": "string"
    },
    "model_tier": {
      "type": "string",
      "enum": [
        "cheap",
        "mid",
        "best"
      ]
    },
    "model_id": {
      "type": "string"
    },
    "reasoning_summary": {
      "type": "string"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    }
  }
}
